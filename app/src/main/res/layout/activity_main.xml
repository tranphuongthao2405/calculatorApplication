<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text"
        android:layout_width="355dp"
        android:layout_height="100dp"
        android:gravity="right"
        android:padding="10dp"
        android:background="@color/lightGray"
        android:text=""
        android:layout_margin="3dp"
        android:textSize="72sp" />


    <Button
        android:id="@+id/ce"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_below="@+id/text"
        android:layout_margin="5dp"
        android:background="@color/lightGray"
        android:text="CE"
        android:textSize="32sp"/>

    <Button
        android:id="@+id/c"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_below="@+id/text"
        android:layout_toRightOf="@+id/ce"
        android:layout_margin="5dp"
        android:background="@color/lightGray"
        android:text="C"
        android:textSize="32sp"/>

    <Button
        android:id="@+id/bs"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_below="@+id/text"
        android:layout_toRightOf="@+id/c"
        android:layout_margin="5dp"
        android:background="@color/lightGray"
        android:text="BS"
        android:textSize="32sp"/>

    <Button
        android:id="@+id/div"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_below="@+id/text"
        android:layout_toRightOf="@+id/bs"
        android:layout_margin="5dp"
        android:background="@color/lightGray"
        android:text="/"
        android:textSize="32sp"/>
    <Button
        android:id="@+id/n7"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_below="@+id/ce"
        android:layout_margin="5dp"
        android:background="@color/White"
        android:text="7"
        android:textSize="32sp"/>
    <Button
        android:id="@+id/n8"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_below="@+id/ce"
        android:layout_toRightOf="@+id/n7"
        android:layout_margin="5dp"
        android:background="@color/White"
        android:text="8"
        android:textSize="32sp"/>
    <Button
        android:id="@+id/n9"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_below="@+id/ce"
        android:layout_toRightOf="@+id/n8"
        android:layout_margin="5dp"
        android:background="@color/White"
        android:text="9"
        android:textSize="32sp"/>
    <Button
        android:id="@+id/mul"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_below="@+id/ce"
        android:layout_toRightOf="@+id/n9"
        android:layout_margin="5dp"
        android:background="@color/lightGray"
        android:text="*"
        android:textSize="32sp"/>
    <Button
        android:id="@+id/n4"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_below="@+id/n7"
        android:layout_margin="5dp"
        android:background="@color/White"
        android:text="4"
        android:textSize="32sp"/>
    <Button
        android:id="@+id/n5"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_below="@+id/n7"
        android:layout_toRightOf="@+id/n4"
        android:layout_margin="5dp"
        android:background="@color/White"
        android:text="5"
        android:textSize="32sp"/>
    <Button
        android:id="@+id/n6"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_below="@+id/n7"
        android:layout_toRightOf="@+id/n5"
        android:layout_margin="5dp"
        android:background="@color/White"
        android:text="6"
        android:textSize="32sp"/>
    <Button
        android:id="@+id/sub"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_below="@+id/n7"
        android:layout_toRightOf="@+id/n6"
        android:layout_margin="5dp"
        android:background="@color/lightGray"
        android:text="-"
        android:textSize="32sp"/>

    <Button
        android:id="@+id/n1"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_below="@+id/n4"
        android:layout_margin="5dp"
        android:background="@color/White"
        android:text="1"
        android:textSize="32sp"/>
    <Button
        android:id="@+id/n2"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_below="@+id/n4"
        android:layout_toRightOf="@+id/n1"
        android:layout_margin="5dp"
        android:background="@color/White"
        android:text="2"
        android:textSize="32sp"/>
    <Button
        android:id="@+id/n3"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_below="@+id/n4"
        android:layout_toRightOf="@+id/n2"
        android:layout_margin="5dp"
        android:background="@color/White"
        android:text="3"
        android:textSize="32sp"/>
    <Button
        android:id="@+id/add"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_below="@+id/n4"
        android:layout_toRightOf="@+id/n3"
        android:layout_margin="5dp"
        android:background="@color/lightGray"
        android:text="+"
        android:textSize="32sp"/>

    <Button
        android:id="@+id/add_sub"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_below="@+id/n1"
        android:layout_margin="5dp"
        android:background="@color/lightGray"
        android:text="+/-"
        android:textSize="32sp"/>

    <Button
        android:id="@+id/n0"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_below="@+id/n1"
        android:layout_toRightOf="@+id/add_sub"
        android:layout_margin="5dp"
        android:background="@color/White"
        android:text="0"
        android:textSize="32sp"/>
    <Button
        android:id="@+id/float_point"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_below="@+id/n1"
        android:layout_toRightOf="@+id/n0"
        android:layout_margin="5dp"
        android:background="@color/lightGray"
        android:text="."
        android:textSize="32sp"/>
    <Button
        android:id="@+id/equal"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_below="@+id/n1"
        android:layout_toRightOf="@+id/float_point"
        android:layout_margin="5dp"
        android:background="@color/lightGray"
        android:text="="
        android:textSize="32sp"/>

</RelativeLayout>